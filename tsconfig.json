{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@PageSetup": ["tests/setup/pagesetup.ts"],
      "@PageFactory": ["tests/setup/pagefactory.ts"],
      "@ActionUtils": ["tests/utils/actionutils.ts"],
      "@AssertUtils": ["tests/utils/assertutils.ts"],
      "@LocatorUtils": ["tests/utils/locatorutils.ts"],
      "@ElementUtils": ["tests/utils/elementutils.ts"],
      "@TimeoutConstants": ["tests/utils/timeoutconstants.ts"],
      "@Types": ["tests/setup/types.ts"],
      "@CustomLogger": ["tests/setup/customlogger.ts"]
    }
  },
  "include": ["tests/**/*.ts", "index.ts", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
